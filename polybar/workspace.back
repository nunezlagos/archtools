[module/bspwm]
type = internal/bspwm

ws-icon-0 = 0;
ws-icon-1 = 1;
ws-icon-2 = 2;
ws-icon-3 = 3;
ws-icon-4 = 4;
ws-icon-5 = 5;
ws-icon-6 = 6;󰨞
ws-icon-7 = 7;
format = <label-state>

label-active = " %icon%"
label-active-foreground = ${color.custom_yellow}
label-active-background = ${color.trans}

label-occupied = " %icon%"
label-occupied-foreground = ${color.white}
label-occupied-background = ${color.trans}

label-urgent = " %icon%"
label-urgent-foreground = ${color.ac}
label-urgent-background = ${color.trans}

label-empty = " %icon%"
label-empty-foreground = ${color.white}
label-empty-background = ${color.trans}



[module/name]
type = internal/xworkspaces
format = <label-state>
format-foreground = ${color.fg}
format-font = 9
format-padding = 0
label-active = "%name%"

[module/sep]
type = custom/text
content = " | "
content-foreground = ${color.fg}

[module/sep2]
type = custom/text
content = "   "
content-foreground = ${color.fg}

;; Application Settings
[settings]
throttle-output = 5
throttle-output-for = 10
throttle-input-for = 30
screenchange-reload = false
compositing-background = source
compositing-foreground = over
compositing-overline = over
compositing-underline = over
compositing-border = over
pseudo-transparency = false
